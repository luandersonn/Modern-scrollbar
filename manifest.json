{
    "name": "Modern scrollbar",
    "version": "0.0.0.2",
    "manifest_version": 2,
    "description": "A modern look for Chromium's scrollbar",
    "icons": {
        "16": "icons/icon16x16.png",
        "32": "icons/icon32x32.png",
        "48": "icons/icon48x48.png",
        "64": "icons/icon64x64.png",
        "128": "icons/icon128x128.png",
        "256": "icons/icon256x256.png"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {},
    "permissions": [
        "activeTab"
      ],    
    "content_scripts": [{
        "css": ["css/styles.css"],        
        "matches": ["<all_urls>"]        
      }]  
}